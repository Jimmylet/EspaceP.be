.team
  &__title
    display: flex;
    justify-content: left;
    overflow: hidden;
    font-family: montserratfont
    font-weight: bold
    font-size: 3.6em
    letter-spacing: 0.3px
    margin-bottom: 13rem
    &:after
      content: "\a0";
      height: 1px
      background-color: #979797
      width: 20%
      display: inline-block
      position: relative
      top: 19px
      padding-right: 0.418em
      margin-left: 0.418em
      -webkit-flex-grow: 1
      -ms-flex-grow: 1
      -webkit-box-flex: 1
      -ms-flex-positive: 1
      flex-grow: 1
  &__person__wrap
    display flex
    justify-content space-between
    margin-bottom 10em
  &__person
    &__figure
      background-color color-white
      max-width 32.3em
      position: relative
      padding 7.5em 3em 3em 3em
      min-height: 23.6em
      text-align: center
    &__img
      display block
      top -60px
      position: absolute
      margin-left: auto
      margin-right: auto
      left: 0
      right: 0
    &__title
      font-family: montserratfont
      text-transform: uppercase
      font-size: 1.6em
      color color-grey-v2
      letter-spacing 0.5px
      margin-bottom: 2em
    &__paragraph
      color color-grey-text
      font-size: 1.6em
      letter-spacing: 0.1px
      line-height: 1.5em


/************************************\
  MAPS
\************************************/
.maps
  position: relative

.maps__img
  height 32em
  margin-bottom 10em
  background url("../images/mapliege@2x.jpg") no-repeat center center
  background-size cover
  overflow hidden

.maps__button
  display: inline-block
  opacity 0
  font-size: 1.6em
  color color-black
  padding 1em 1.5em
  background rgba(255,255,255,0.9)
  border 1px solid color-pink
  float right
  position: relative
  top 10px
  right 10px
  transition opacity .3s ease
  cursor pointer
  &:hover
  &:focus
    background color-pink
    color color-white

.maps
  position: relative
  display block
  margin-bottom 10em
  &:hover .maps__button
  &:focus .maps__button
    opacity 1
    transition opacity .3s ease