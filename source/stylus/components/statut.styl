.breadcrumb
  margin-bottom 5em

.statut .index
  max-width 100em
  margin: 0 auto .33em auto // 10px

.statut .index
  &__title
    margin-bottom 10px
    font-family: montserratfont
    font-size: 3em
    letter-spacing 0.83px
  & small
    display: block
    margin-bottom: 20px
    font-size: 1.6em
    font-style: italic
  & ol
    font-size 16px
    counter-reset section
    list-style-type: none;
    letter-spacing .3px
    & li
      letter-spacing .3px
      margin-bottom 7px
    & li:before
      counter-increment: section;
      content: counters(section,".") " ";
      margin-right 5px
  & .index__list-title
    display: inline-block
    margin 10px 0
    color color-pink - 20%
  & .index__ol-increment
      margin-left 15px
  & a
    color color-pink - 20%
    transition color .2s ease
  & a:hover
      text-decoration underline

.statut .content
  margin-top 6rem
  .content__count:before
    font-family: montserratfont;
    font-weight: bold
    font-size: 30px
    font-size: 3rem
  .content__list-title
    display: inline-block
    font-family: montserratfont;
    font-weight: bold
    font-size: 30px
    font-size: 3rem
    letter-spacing 0.83px
    margin-bottom 2rem
  .content__li
    margin-left 70px
  .content__li span
  .content__li:before
    font-family: montserratfont
    font-size 20px
    font-size: 2rem
  .content__li span
    display inline-block
    margin-bottom 10px
    margin-bottom 1rem
    letter-spacing .56px
  .content__paragraph
    margin-bottom 8px
    margin-bottom .8rem
    font-size: 18px
    font-size: 1.8rem
    line-height: 1.72em
  .content__paragraph:last-child
    margin-bottom 20px
    margin-bottom 2rem

