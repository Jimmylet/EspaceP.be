    font-size: 1.6em
    color: color-text-paragraph-manifeste
    letter-spacing: 0.26px;
    line-height: 28px;
    max-width: 751px
    margin: 0 auto 25px auto
  &__comwrap
    border-radius 4px
    max-width 75.1em
    background #EFEFEF
    margin: 5em auto 0 auto
    padding 3em 2.7em
    &__title
      display: block
      margin-bottom 6.5rem
      font-size: 1.4em
      text-transform: uppercase
      letter-spacing 1.4px
      color #333333
      text-align: center
      font-weight: bold
    &__namedate
      font-weight: bold
      font-size: 1.4em
      color #333333
      & time
        font-weight: normal
        font-size: 12px
        margin-left: 8px
    &__commentaire
      font-size: 1.4em
      color #666666
      line-height: 1.7em
      margin-top 12px
    &__response
      display: block
      font-size: 1.1em
      color #333333
      margin-top 1.25em

.comment
  margin-bottom 4em


/************************************\
  BOUTON SCROLL
\************************************/
.manifeste-button
  visibility hidden
  position fixed
  bottom 10px
  right: 25px
  display flex
  width 24em
  justify-content space-between
  align-items flex-start
  transition bottom .3s ease
  &__top
    display block
    background-color rgba(255,255,255,.9)
    max-width 42px
    border 1px solid color-pink
    padding 1.15em 1.3em 1.2em 1.3em
    transition background .3s ease
    & svg
      position: relative
      left -3px
    &__text
      {visuallyhidden}
    &:hover
    &:focus
      background color-pink
      transition background .3s ease
  &__top:hover .manifeste-button__top__svg
  &__top:focus .manifeste-button__top__svg
    fill color-white
    transition fill .3s ease
  &__signez
    display: block
    font-size: 1.4em
    color color-grey-v2
    max-width 190px
    padding .7em 1em 1em 1em
    border 1px solid color-pink
    background-color rgba(255,255,255,.9)
    transition background .3s ease
    & svg
      margin-right 8px
      position: relative
      top 4px
    &:hover
    &:focus
      background color-pink
      transition background .3s ease
      color color-white
  &__signez:hover .manifeste-button__signez__svg
  &__signez:focus .manifeste-button__signez__svg
    fill color-white
    transition background .3s ease

.button-fixed-manifeste
  .manifeste-button
    visibility visible
    bottom 25px
    transition bottom .3s ease

.no-js
  .manifeste-button
    display none

.manifeste
  .footer
    margin-top: 0

// form manifeste
.signez__send
  &__title
    font-family: montserratfont
    font-size: 2em;
    letter-spacing .5px
    font-weight: bold;
    color: #333;
    margin-bottom 8px
    line-height: 1.4em
    &:before
      content ''
      display: block
      margin: 0 auto 1.6em auto
      width 80%
      height 1px
      background darkgrey
  &__notes
