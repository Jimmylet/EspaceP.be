/************************************\
  SIGNEZ
\************************************/

.signez
  background color-background
  padding 5em 3em 15em
  margin: 0 auto
  &__title
    font-size: 3.6em
    font-weight: bold
    text-transform: uppercase
    letter-spacing 1px
    line-height 1.5em
    text-align: center
    &:before
      content ''
      display block
      width 100px
      height 96px
      {signez}
      margin: 0 auto 25px auto
    &:after
      content ''
      display block
      width 270px
      height 1px
      background #979797
      margin: 10px auto 45px auto
