// components - menu.styl

.menu
  color color-white
  background-color rgba(0,0,0,0.6)
  position: fixed;
  overflow: hidden;
  top 0
  z-index 1
  display: block
  transition: background 500ms ease
  transform: translate3d(0,0,0)
  height: 100%
  width: 100%
  &__title
    {visuallyhidden}


.submenu
  {visuallyhidden}