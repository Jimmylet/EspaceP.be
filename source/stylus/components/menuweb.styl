// components - menu.styl

.menu
  overflow: hidden;
  top 0
  //z-index 999
  display: block
  transition: background 500ms ease
  transform: translate3d(0,0,0)
  height: 100%
  width: 100%
  &__item
    display block
    text-align: center
  &__list
    position absolute
    left 0%
    width 100%
    top 50%
    transform translateY(-50%)
  &__link
    display block
    font-size: 2em;
    font-weight: 100
    padding 10px
    visibility hidden
    opacity 0
    color color-white
    transform scale(0.8)
  &__search
    img
      display block
    position absolute
    top 24px
    right 30px
    z-index 1000
  &__search__label
    display none
  &__search__input
    font-size: 16px;
    padding 7px 10px
    vertical-align top
    background-color rgba(255,255,255,0.35)
    color color-white
    position relative
    left: 1px;
    border-radius 5px 0 0 5px
    border none
    width auto
    font-weight:normal;
    &::placeholder
      color color-white
      font-family opensansfont
      font-weight:100;
    font-family opensansfont
    font-weight:100;
  &__search__submit
    position: relative;
    float right
    border: 0
    background: transparent
    position: relative
    padding 0




  &__wrap
    height 100%
    width 100%
    margin 3em 3em
  &__title
    {visuallyhidden}
  &__icon
    display none
  &__icon__wrap
    position relative
  &__icon__label
    display: inline-block
    z-index: 2
    height: 30px
    width: 30px
    cursor: pointer
    position absolute
    & span,
    & span:before,
    & span:after
      position: absolute;
      width: 30px;
      height: 4px;
      background-color: #fff;
      border-radius: 5px;
    & span
      top 10px
      transition: background-color 500ms;
    & span:before,
    & span:after
      content: '';
      backface-visibility: hidden;
      transition: transform 500ms;
    & span:before
      transform: translateY(-9px);
    & span:after
      transform: translateY(9px);


.no-main
  .menu__logo:before
    background url("../images/svg/logo_espacep2.svg") no-repeat;
    background-size 50px

.with--menu
  .menu__icon__label span
    background-color transparent
    &:before
      transform: rotate(-45deg);
    &:after
      transform rotate(45deg);
  .menu-home
    height 100%
    width 100%
  .menu
    background rgba(0,0,0,0.89)
    position: fixed;
    z-index 999
    &__link
      visibility visible
      opacity 1
      transform scale(1)
      transition background .5s ease
      &:hover
      &:focus
        background-color rgba(0,0,0,0.93) + 10%
        transition background .5s ease
    &__item0
      transition all 200ms ease-in-out
      transition-property: opacity, transform
    &__item1
      transition: all 300ms ease-in-out;
      transition-property: opacity, transform
    &__item2
      transition: all 400ms ease-in-out;
      transition-property: opacity, transform
    &__item3
      transition: all 500ms ease-in-out;
      transition-property: opacity, transform
    &__item4
      transition: all 600ms ease-in-out;
      transition-property: opacity, transform
    &__item5
      transition: all 700ms ease-in-out;
      transition-property: opacity, transform
    &__item6
      transition: all 800ms ease-in-out;
      transition-property: opacity, transform
    &__item7
      transition: all 900ms ease-in-out;
      transition-property: opacity, transform
    &__item8
      transition: all 1000ms ease-in-out;
      transition-property: opacity, transform


/************************************\
  Style non responsive
\************************************/

@media screen and ( min-width: 1048px )
  .menu
    overflow hidden
    position: static;
    display: block
    text-align left
    z-index: 1;
    transition: none
    transform: none
    height: auto;
    width: auto;
    &__wrap
      height auto
      width auto
    &__icon
    &__label
    &__icon__wrap
      display none
    &__list
      position static
      width 100%
      transform none
      top auto
    &__item
      text-align left
    &__link
      display inline-block
      opacity 1
      padding 0
      visibility visible
      font-size: 20px;
      letter-spacing .27px
      font-weight: normal
      color color-black
      &:after
        outline none
        content ""
        display block
        height 2px
        width 0px
        margin 6px auto 0 auto
        background-color pink
      &:hover:after
      &:focus:after
        outline none
        width 40px
        transition width .3s ease
    &__logo
      position: relative
      &:before
        content ""
        display inline-block
        height 60px
        width 60px
        background url("../images/svg/logo_espacep.svg") no-repeat;
        background-size 50px
        position: absolute
        top -14px
        left 25px
    &__logo:after
      display none
    &__search
      top 22px

  .menu__link-res
    display none


  .menu-home
    .menu__link
      color color-white
    .menu__logo
      color transparent
    .menu__link:after
      background-color color-white


.site-content
  background-color color-background
  position absolute
  top 8em
  width 100%

@media screen and ( max-width: 399px )
  .menu
    &__search
      &__input
        font-size: 14px
        padding 8.5px 10px
        min-width: 100px
        left 4px
    &__item0
      padding-top 2em
