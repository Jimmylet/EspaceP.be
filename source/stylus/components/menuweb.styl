// components - menu.styl

.menu
  -webkit-backdrop-filter blur(10px)
  position: fixed;
  overflow: hidden;
  top 0
  z-index 1
  display: block
  transition: background 500ms ease
  transform: translate3d(0,0,0)
  height: 100%
  width: 100%
  &__item
    display block
    text-align: center
  &__list
    position absolute
    left 0%
    width 100%
    top 50%
    transform translateY(-50%)
  &__link
    display block
    font-size: 3em;
    font-weight: 100
    padding 20px
    visibility hidden
    opacity 0
    color color-white
    transform scale(0.8)
  &__search
    padding 5px
  &__search__input
    width 250px
    vertical-align top
    appearance none
    border none
    font-size:3em;
    background-color transparent
    border-bottom 1px solid color-white
    color color-white
    visibility hidden
    opacity 0
    transform scale(0.8)
    font-family opensansfont
    font-weight:100;
    &::placeholder
      color color-white - 30%
      font-family opensansfont
      font-weight:100;
  &__search__submit
    position: relative;
    left: -37px;
    top 3px
    visibility hidden
    opacity 0
    transform scale(0.8)

  &__wrap
    height 100%
    width 100%
    margin 3em 3em
  &__title
    {visuallyhidden}
  &__icon
    display none
  &__icon__wrap
    position relative
  &__icon__label
    display: inline-block
    z-index: 2
    height: 30px
    width: 30px
    cursor: pointer
    position absolute
    & span,
    & span:before,
    & span:after
      position: absolute;
      width: 30px;
      height: 4px;
      background-color: #fff;
      border-radius: 5px;
    & span
      top 10px
      transition: background-color 500ms;
    & span:before,
    & span:after
      content: '';
      backface-visibility: hidden;
      transition: transform 500ms;
    & span:before
      transform: translateY(-9px);
    & span:after
      transform: translateY(9px);


.with--menu
  .menu__icon__label span
    background-color transparent
    &:before
      transform: rotate(-45deg);
    &:after
      transform rotate(45deg);
  .menu
    background rgba(0,0,0,0.93)
    &__link
      visibility visible
      opacity 1
      transform scale(1)
      transition background .5s ease
      &:hover
        background-color rgba(0,0,0,0.93) + 10%
        transition background .5s ease
    &__item0
      transition all 500ms ease-in-out
      transition-property: opacity, transform
    &__item1
      transition: all 800ms ease-in-out;
      transition-property: opacity, transform
    &__item2
      transition: all 1100ms ease-in-out;
      transition-property: opacity, transform
    &__item3
      transition: all 1400ms ease-in-out;
      transition-property: opacity, transform
    &__item4
      transition: all 1700ms ease-in-out;
      transition-property: opacity, transform
    &__search
      &__input
        opacity 1
        transform scale(1)
        visibility visible
        transition: all 2000ms ease-in-out;
        transition-property: opacity, transform


/************************************\
  Style non responsive
\************************************/

@media screen and ( min-width: 1048px )
  .menu
    overflow hidden
    -webkit-backdrop-filter blur(10px)
    position: static;
    display: block
    text-align left
    z-index: 1;
    transition: none
    transform: none
    height: auto;
    width: auto;
    &__wrap
      height auto
      width auto
    &__icon
    &__label
    &__icon__wrap
      display none
    &__list
      position static
      width 100%
      transform none
      top auto
    &__item
      text-align left
    &__link
      display inline-block
      opacity 1
      padding 0
      visibility visible
      font-size: 20px;
      letter-spacing .27px
      font-weight: normal
      color color-black
      &:after
        content ""
        display block
        height 2px
        width 0px
        margin 6px auto 0 auto
        background-color pink
      &:hover:after
        width 40px
        transition width .3s ease
    &__logo
      position: relative
      &:before
        content ""
        display inline-block
        height 46px
        width 61px
        background url("../images/logo_espacep.jpg") no-repeat;
        position: absolute
        top -14px
    &__search
      float right
      position relative
      top -8px
      &__input
        font-size: 16px;
        padding 9px 10px
        vertical-align top
        background-color rgba(255,255,255,0.35)
        color color-white
        position relative
        left 3.2px
        border-radius 5px 0 0 5px
        &::placeholder
          color color-white



  .menu-home
    .menu__link
      color color-white
    .menu__logo
      color transparent
    .menu__link:after
      background-color color-white
