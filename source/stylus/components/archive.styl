.archive
  max-width: 114em
  margin 0 auto

  .last-article-two
    flex-wrap: wrap
    .last-article__link
      width: 47%
      margin-bottom: 6.5em
      @media screen and (max-width 1090px)
        width: 100%
        margin-right: 0
        margin-bottom: 25px
        .article
          min-height: auto
          &__wrap-text
            max-width: none

  @media screen and (max-width 905px)
    .last-article__link--top
      .article
        min-height auto
        &__img
          display none
        &__wrap-text
          max-width none
          width 100%
        &__title
          max-width none
          font-size: 2.2em
        &__category
          font-size: 1.4em

